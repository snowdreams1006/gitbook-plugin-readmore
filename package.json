{
  "name": "gitbook-plugin-readmore",
  "version": "1.2.1",
  "description": "Gitbook 整合 OpenWrite 平台的 readmore 插件,实现博客的每一篇文章自动增加阅读更多效果,关注公众号后方可解锁全站文章,从而实现博客流量导流到微信公众号粉丝目的.",
  "main": "index.js",
  "engines": {
    "gitbook": ">=2.4.3"
  },
  "gitbook": {
    "properties": {
      "id": {
        "type": "string",
        "required": false,
        "default": "container",
        "title": "容器id",
        "description": "文章容器id"
      },
      "blogId": {
        "type": "string",
        "required": true,
        "title": "博客id",
        "description": "OpenWrite 后台申请的博客唯一标识,例如:15702-1569305559839-744"
      },
      "name": {
        "type": "string",
        "required": true,
        "title": "博客名称",
        "description": "OpenWrite 后台申请的博客名称,例如:雪之梦技术驿站"
      },
      "qrcode": {
        "type": "string",
        "required": true,
        "title": "微信公众号二维码",
        "description": "OpenWrite 后台申请的微信公众号二维码,例如:https://snowdreams1006.github.io/snowdreams1006-wechat-public.jpeg"
      },
      "keyword": {
        "type": "string",
        "required": true,
        "title": "微信公众号回复关键字",
        "description": "OpenWrite 后台申请的微信公众号后台回复关键字,例如:vip"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowdreams1006/gitbook-plugin-readmore.git"
  },
  "keywords": [
    "gitbook-plugin-readmore",
    "gitbook-plugin-openwrite",
    "readmore",
    "openwrite",
    "vip",
    "github",
    "opensource"
  ],
  "author": {
    "name": "snowdreams1006",
    "email": "snowdreams1006@163.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/snowdreams1006/gitbook-plugin-readmore/issues"
  },
  "homepage": "https://snowdreams1006.github.io/gitbook-plugin-readmore/"
}
